{
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.fontSize": 13,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  // "vim.visualModeKeyBindings": [
    // {
      // "before": ["j", "k"],
      // "after": ["<Esc>"]
    // }
  // ],
    "vim.handleKeys": {
      "<C-a>": false,
      "<C-f>": false,
      "<C-v>": false,
      "<C-c>": false,
      "<C-x>": false,
      "<C-b>": false,
      "<C-j>": false,
    },
    "vim.sneak": true,
    "vim.easymotion": true,
    "vim.useCtrlKeys": true,
    "vim.vimrc.enable": true,
    "vim.leader": "<space>",
    "vim.vimrc.path": "/Users/sivan/.vimrc",
    "vim.sneakUseIgnorecaseAndSmartcase":true,
    "vim.normalModeKeyBindingsNonRecursive": [
      {
        "before": ["J"],
        "after": ["6", "j"]
      },
      {
        "before": ["K"],
        "after": ["6", "k"]
      },
      {
        "before": ["Y"],
        "after": ["y", "$"]
      },
      {
        "before": [
          "<Leader>",","
        ],
        "commands": [
          "workbench.action.showCommands"
        ]
      },
      {
        "before": [
          "<Leader>","l"
        ],
        "commands": [
          "workbench.action.navigateForward"
        ]
      },
      {
        "before": [
          "<Leader>","h"
        ],
        "commands": [
          "workbench.action.navigateBack"
        ]
      },
      { 
        "before": [
          "<Leader>","."
        ],
        "commands": [
          "workbench.action.quickOpen"
        ]
      },
      {
        "before": [
          "<Leader>","d"
        ],
        "commands": [
          "workbench.action.closeActiveEditor"
        ]
      },
      {
        "before": [
          "leader","D"
        ],
        "commands": [
          "workbench.action.closeOtherEditors"
        ]
      },
      {
        "before": [
          "leader","s"
        ],
        "commands": [
          "workbench.action.files.save"
        ]
      },
      {
        "before": ["leader", "w"],
        "after": ["leader", "leader", "w"]
      },
      {
        "before": ["leader", "b"],
        "after": ["leader","leader","b"]
      },
      {
        "before": ["leader", "k"],
        "after": ["leader", "leader", "k"]
      },
      {
        "before": ["leader", "j"],
        "after": ["leader", "leader", "j"]
      },
      {
        "before": ["<leader>", "e"],
        "after": ["<leader>", "<leader>", "e"]
      },
      {
        "before": ["<leader>", "o"],
        "commands": ["workbench.action.gotoSymbol"]
      },
      {
        "before": ["<leader>", "f"],
        "after": ["<leader>", "<leader>", "f"]
      },
      {
        "before": ["leader", "n"],
        "commands": ["workbench.action.nextEditor"]
      },
      {
        "before": ["leader", "p"],
        "commands": ["workbench.action.previousEditor"]
      },
      {
        "before": ["<leader>", "c"],
        "commands": ["editor.action.commentLine"]
      },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
      {
          "before": [
              "p",
          ],
          "after": [
              "p",
              "g",
              "v",
              "y"
          ]
      },
      {
        "before": ["J"],
        "after": ["6", "j"]
      },
      {
        "before": ["K"],
        "after": ["6", "k"]
      },
      {
        "before": [
          "<Leader>",","
        ],
        "commands": [
          "workbench.action.showCommands"
        ]
      },
    ],
    "workbench.colorTheme": "Atom One Dark",
    "workbench.colorCustomizations": {
      "[Tokyo Night]": {
        "editorCursor.foreground": "#8c7fca", // Cursor color
        "editorCursor.background": "#ffffff", // Cursor color
